{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/**.css",
          "/**.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/**/*.svg",
          "/**/*.cur",
          "/**/*.jpg",
          "/**/*.jpeg",
          "/**/*.png",
          "/**/*.apng",
          "/**/*.webp",
          "/**/*.avif",
          "/**/*.gif",
          "/**/*.otf",
          "/**/*.ttf",
          "/**/*.woff",
          "/**/*.woff2"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "dynamic-routes",
      "urls": ["/"],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 20,
        "maxAge": "1d",
        "timeout": "5s"
      }
    },
    {
      "name": "api-data",
      "urls": [
        "https://miapi.com/**"
      ],
      "cacheConfig": {
        "strategy": "freshness",   // Network First
        "maxSize": 50,             // máximo de entradas en caché
        "maxAge": "6h",            // cuánto tiempo se consideran válidos los datos
        "timeout": "10s"           // si la red tarda >10s, usar caché
      }
    }
  ]
}
